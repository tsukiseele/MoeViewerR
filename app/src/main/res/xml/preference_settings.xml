		<Preference
			android:key="onExportCollections"
			android:name="导出收藏"
			android:singleLine="true"
			android:summary="导出收藏夹数据，以防止丢失"/-->
		
	</PreferenceCategory>
	
	<PreferenceCategory android:title="下载设置">
		<Preference
			android:key="onDownloadPath"
			android:singleLine="true"
			android:title="下载路径"/>
		
		<!--EditTextPreference
			android:dialogTitle="输入下载路径"
			android:key="onDownloadPath"
			android:singleLine="true"
			android:summary="图片的下载路径"
			android:name="下载路径"/-->

		<SwitchPreference
			android:key="isNomedia"
			android:title="在媒体中隐藏下载的文件"
			android:defaultValue="false"
			android:singleLine="true"
			android:summaryOn="在目录中创建.nomedia文件防止媒体扫描"
			android:summaryOff="关闭"/>
		
	</PreferenceCategory>
	
	<PreferenceCategory android:title="调试">
		
		<SwitchPreference
			android:key="isOpenLogger"
			android:title="日志"
			android:defaultValue="true"
			android:summaryOn="生成错误日志，并在崩溃时日志信息到剪切板"
			android:summaryOff="关闭"/>
		
	</PreferenceCategory>
	
