	<PreferenceCategory android:title="基础设置">
		<SwitchPreference
			android:key="useSystemFont"
			android:title="英文字体设置"
			android:singleLine="true"
			android:summaryOn="系统字体"
			android:summaryOff="内置字体"/>
		
	</PreferenceCategory>
	
	<PreferenceCategory android:title="浏览设置">

		<!--SwitchPreference
			android:key="isSaveSiteSelector"
			android:name="记录上次打开的站点"
			android:defaultValue="true"
			android:summaryOn="开启"
			android:summaryOff="关闭"/-->

		<Preference
			android:key="onClearImageCache"
			android:title="清空缓存"
			android:singleLine="true"
			android:summary="清空浏览时的略缩图缓存"/>
		
		<SwitchPreference
			android:key="onSafeMode"
			android:title="安全模式"
			android:singleLine="true"
			android:summaryOn="您已屏蔽不安全的内容"
			android:summaryOff="您现在将可以浏览完整内容"/>
		
		<!--Preference
			android:key="onImportCollections"
			android:name="导入收藏"
			android:singleLine="true"
